//ITERATIVE
public class M {
	
	static int fac(int n) {
		int res = 1;
		for(int i =2; i<=n; i++) {
			
			res = res*i;
		}
		return res;
		
	}

	
	public static void main(String[] args) {
		
		int number = 4;
		System.out.println(fac(number));
		
	}

}


//RECURSIVE

public class M {
	
	static int fac(int n) {
		int res = 1;
		if(n==0)
			return 1;
		return n*fac(n-1);
		
	}
	
	
	public static void main(String[] args) {
		
		int number = 4;
		System.out.println(fac(number));
		
	}

}
